<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container d-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-3 mb-4">
    <%= link_to "my blog", root_path, id: "logo", class: "d-flex align-items-center col-md-3 mb-2 mb-md-0 text-dark text-decoration-none" %>
    <nav>
      <ul class="nav col-12 col-md-auto mb-2 justify-content-center mb-md-0">
        <li class="nav-item">
          <%= link_to "Home", root_path, class: "nav-link px-2 link-secondary"%>
        </li>
        <li class="nav-item">
          <%= link_to "Help", help_path, class: "nav-link px-2 link-secondary" %>
        </li>
      </ul>
    </nav>
    <div class="col-md-3 text-end">
      <% if user_signed_in? %>

        <ul class="nav">
          <li class="nav-item">
            <%= link_to "Profile", current_user, class:"nav-link link-secondary px-2" %>
          </li>
          <li class="nav-item">
            <%= link_to 'Setting', edit_user_registration_path, class: "nav-link link-secondary px-2" %>
          </li>
          <li class="nav-item">
            <%= link_to 'Log Out', destroy_user_session_path, class: "nav-link link-secondary px-2", data: { turbo_method: :delete } %>
          </li>
        </ul>

      <% else %>
        <%= link_to "Log in", new_user_session_path, class: "btn btn-outline-primary" %>
        <%= link_to "Sign-up", new_user_registration_path, class: "btn btn-primary" %>
      <%end%>
    </div>
  </div>
</header>