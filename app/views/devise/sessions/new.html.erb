<main class="text-center form-signin w-100 m-auto">

  <h2 class="h3 mb-3 fw-normal">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field form-floating">
      
      <%= f.email_field :email, autocomplete: "email", class: "form-control" %><br/>
      <%= f.label :email %>
    </div>

    <div class="field form-floating">
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %><br/>
       <%= f.label :password %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field checkbox mb-3">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions main_btn">
      <%= f.submit "Log in", class: "w-100 btn btn-lg btn-primary" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</main>  