
<main class="form-signin w-100 m-auto">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <form action="">
      <h2 class="h3 mb-3 fw-normal logFormHeader">Log in</h2>
      <div class="field form-floating indent">
          <%= f.text_field :username, class:"form-control", placeholder:"username", id: "userInput"%>
          <label for="userInput">Username</label>
        </div>

      <div class="field form-floating indent">
        <%= f.password_field :password, autocomplete: "current-password",class:"form-control",placeholder:"password", id:"passwordInput" %>
        <label for="passwordInput">Password</label>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field checkbox">
          <label for="">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </label>
        </div>
      <% end %>

      <div class="actions login_btn">
        <%= f.submit "Log in", class: "btn btn-primary w-100 " %>
      </div>
        
        <%= link_to "Sign up", new_user_registration_path, class: "btn btn-outline-primary w-100" %>

        <%= link_to "Forgot your password?", new_user_password_path, class: "btn btn-outline-primary w-100 forgot_btn" %>

     <!--<%= render "devise/shared/links" %>-->
    </form>
  <% end %>
</main>