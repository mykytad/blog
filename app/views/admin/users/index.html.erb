<% provide(:title, "Admin Users") %>
<div class="row">
	<div class="col-3" style="background: #fff;border: 1px solid;">
		<p>block for other admin pages</p>
	</div>
	<div class="col-9 admin-artile" style="border: 1px solid;">
		<h3>Admin Users</h3>
		<ul class = "list-group admin_list">
			<% @users.each do |user| %>
			<li class = "list-group-item adminArtile_list_item list-group-item adminArtile_list_item d-flex col-12 justify-content-between">
				<%= link_to user.name, user, class:"col-9 admin_list_link" %>
				<%= link_to "Cancel my account", data: { confirm: "Are you sure?" }, method: :delete, class:"w-100 btn btn-outline-danger" %>
			</li>
			<% end %>
		</ul>
	</div>
</div>
