<% unless comment.archived? %>
  <div class="articl_comments">
    <p style="font-weight: 700; font-style: italic;">
      <%= comment.user.name %>
    </p>
    <p>
      <%= comment.body %>
    </p>
      <% if current_user %> <!-- проверяет авторезирован ли пользеватель  -->
        <% if comment.user_id == current_user.id %> <!-- если пользеватель авторезирован проверяет он ли сделал коментарий -->
          <p class="comment_btn">
            <%= link_to "Destroy Comment", [comment.article, comment], class:"btn btn-outline-danger", data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
          </p>
        <%end%>
      <%end%>
  </div>
<% end %>